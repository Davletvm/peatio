<div class="chat-item">
  <div class="author">

    <% if @type == 'limit_send': %>
      <span class="user-status is-silent"></span>
      <h5 class="name"><%= @nickname %> 被管理员禁言 <%= @limit_at %></h5>
      <time><%- formatter.short_time @at %></time>
    <% else if @type == 'excessively_send': %>
      <span class="user-status is-silent"></span>
      <h5 class="name">你发言过快拉，请休息一会儿</h5>
    <% else if @type == 'forbidden_send': %>
      <span class="user-status is-forbidden"></span>
      <h5 class="name">你已被禁言 <%= @limit_at %></h5>
    <% else if @type == 'nickname_changed': %>
      <span class="user-status is-online"></span>
      <h5 class="name"><strong><%= @old_nickname %></strong> 已改名为 <strong><%= @nickname %></strong></h5>
    <% end %>

  </div>
</div>
<div class="chat-item <%= 'by-admin' if @is_master %> <%= 'by-me' if @is_me %>">
  <div class="chat-bubble">
    <span class="arrow"></span>
    <blockquote><%= @body %></blockquote>
  </div>
  <div class="author">
    <h5 class="name">
      <%= @nickname %>
      <% if @is_master: %>
        <span class="label label-primary">admin</span>
      <% end %> 
    </h5>
    <time><%- formatter.short_time @at %></time>
  </div>
</div>